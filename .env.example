# Visual Report Builder Configuration Example

# Authentication
VISUAL_REPORT_AUTH_ENABLED=true
VISUAL_REPORT_WEB_MIDDLEWARE=auth
VISUAL_REPORT_API_MIDDLEWARE=auth:sanctum

# Caching (disabled by default - enable only in production with caution)
VISUAL_REPORT_CACHE_ENABLED=false
VISUAL_REPORT_CACHE_TTL=3600

# Models
VISUAL_REPORT_USER_MODEL=App\Models\User
VISUAL_REPORT_ROLE_MODEL=App\Models\Role
VISUAL_REPORT_AUTO_DISCOVER=true

# Session Configuration (recommended)
SESSION_DRIVER=file
# Alternative for distributed systems: SESSION_DRIVER=database

# Export Configuration
VISUAL_REPORT_EXPORT_DISK=local
VISUAL_REPORT_EXPORT_PATH=exports
VISUAL_REPORT_MAX_EXPORT_ROWS=100000

# Permissions
VISUAL_REPORT_CREATE_TEMPLATES=all
VISUAL_REPORT_CREATE_REPORTS=all
VISUAL_REPORT_SHARE_REPORTS=all
VISUAL_REPORT_EXPORT_REPORTS=all
